<%- include('../partials/header')%>
<div class="container">
    <h1 style="text-align: center; margin-top: 3rem;">add a new college</h1>
    <div class="row">
        <div style="margin: auto; width: 30%;">
            <form action="/colleges/<%= college_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" value="<%= comment.author%>">
                </div>
                <div class="form-group">
                    <button class="form-control btn btn-large btn-primary">Submit</button>
                </div>
            </form>
        </div>
        
    </div>
</div>

<%- include('../partials/footer')%>